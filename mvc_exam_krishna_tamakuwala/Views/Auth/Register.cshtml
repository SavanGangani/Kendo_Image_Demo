            @Html.LabelFor(model => model.c_userid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.c_userid, new { htmlAttributes = new { @class = "form-control" } })
