<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#txtEmail").change(function () {
        var settings = {
            "url": "/Auth/IsEmailExists?email=" + $("#txtEmail").val(),
            "method": "GET",
            "timeout": 0
        }
        $.ajax(settings).done(function (message) {
            if(message == "True")
            {
                $("#errEmail").css("display", "block");
            }
            else
            {
                $("#errEmail").css("display", "none");
            }
        });
    });
</script>